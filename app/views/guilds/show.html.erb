<div class="container-fluid">
  <h3 class="pb-2 pt-2 text-center">Members</h3>
</div>

<div class="container-fluid pb-5">
  <div class="row row-cols-1 row-cols-md-3 g-4">
  <% @guild.members.each do |member| %>
    <%= render "guilds/member", member: member %>
  <% end %>
  </div>
</div>


<div class="container-fluid">
  <h3 class="pb-2 pt-2 text-center">War Chest</h3>
</div>

<div class="container-fluid pb-5">
  <div class="row row-cols-1 row-cols-md-3 g-4">
  <% @guild.warchests.each do |warchest| %>
    <%= render "guilds/warchest", warchest: warchest %>
  <% end %>
  </div>
</div>